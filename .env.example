# Backend environment variables (used by Docker Compose or your shell)
# Copy to .env and adjust as needed. Spring Boot reads OS env vars automatically.

# App identity and port
SPRING_APPLICATION_NAME=agriecom-backend
SERVER_PORT=8080

# SpringDoc / Swagger UI
SPRINGDOC_API_DOCS_PATH=/v3/api-docs
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html
SPRINGDOC_SWAGGER_UI_OPERATIONS_SORTER=alpha
SPRINGDOC_SWAGGER_UI_TAGS_SORTER=alpha

# Database (PostgreSQL)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/agriecom
SPRING_DATASOURCE_USERNAME=postgres
SPRING_DATASOURCE_PASSWORD=postgres
SPRING_JPA_HIBERNATE_DDL_AUTO=validate

# Redis
SPRING_REDIS_HOST=localhost
SPRING_REDIS_PORT=6379
SPRING_REDIS_PASSWORD=
SPRING_REDIS_DATABASE=0

# Spring profile (dev or prod)
#SPRING_PROFILES_ACTIVE=dev
#SPRING_PROFILES_ACTIVE=prod

# Liquibase
SPRING_LIQUIBASE_ENABLED=true
SPRING_LIQUIBASE_CHANGELOG=classpath:db/changelog/db.changelog-master.yml

# JWT secret (for development only, use a secure method in production)
SECURITY_JWT_SECRET=your_jwt_secret_key_here
SECURITY_JWT_EXPIRATION_MS=3600000
SECURITY_JWT_COOKIE_NAME=AUTH_TOKEN